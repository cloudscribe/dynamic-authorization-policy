@model cloudscribe.DynamicPolicy.Web.Mvc.ViewModels.NewPolicyViewModel
@inject IStringLocalizer<PolicyResources> sr
@{
    ViewData["Title"] = sr["New Policy"];
}
<h2>@ViewData["Title"]</h2>
<form asp-action="NewPolicy">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="mb-3">
        <label asp-for="Name">@sr["Name"]</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        @Html.ValidationMessage("nameinuse", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-default">@sr["Save"]</button>
    </div>
</form>
<a asp-action="Index">@sr["Back to List"]</a>
